        </div>
      </MenuHeader>
      <MenuItem onAction={onProfileClick}>
        <UserIcon className="h-4 w-4" />
        <Trans>Profile</Trans>
      </MenuItem>
      <MenuSeparator />
      <MenuItem onAction={onLogoutClick}>
        <LogOutIcon className="h-4 w-4" />
        <Trans>Log out</Trans>
      </MenuItem>
    </Menu>
  );
}

