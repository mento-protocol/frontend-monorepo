{
  /******************************/
  /* General Editor Settings */
  /******************************/

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "trunk.check": "explicit"
  },

  // Configure formatters by language
  "editor.defaultFormatter": "trunk.io",
  "[typescript]": {
    "editor.defaultFormatter": "trunk.io"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "trunk.io"
  },
  "[javascript]": {
    "editor.defaultFormatter": "trunk.io"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "trunk.io"
  },
  "[json]": {
    "editor.defaultFormatter": "trunk.io"
  },
  "[markdown]": {
    "editor.defaultFormatter": "trunk.io"
  },
  "[yaml]": {
    "editor.defaultFormatter": "trunk.io"
  },

  /******************************/
  /* TypeScript Configuration */
  /******************************/

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "shortest",
  "javascript.preferences.importModuleSpecifier": "shortest",

  /******************************/
  /* Prettier Configuration */
  /******************************/

  "prettier.documentSelectors": ["**/*.{js,jsx,ts,tsx,json,css,md,mdx}"],

  /******************************/
  /* File Management */
  /******************************/

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/.trunk/out": true,
    "**/.trunk/logs": true,
    "**/pnpm-lock.yaml": true
  },

  /******************************/
  /* Tailwind CSS Settings */
  /******************************/

  // Enable Tailwind class completions in string content (JSX attributes)
  "editor.quickSuggestions": {
    "strings": "on"
  },

  // Always open .css files in Tailwind CSS mode
  "files.associations": {
    "*.css": "tailwindcss"
  },

  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },

  /******************************/
  /* ESLint Configuration */
  /******************************/

  // Disable ESLint extension in favor of Trunk
  "eslint.enable": false,

  /******************************/
  /* Trunk Configuration */
  /******************************/

  "trunk.trunkPath": "trunk",

  /******************************/
  /* Spell Checker Configuration */
  /******************************/

  "cSpell.words": [
    "aspekta",
    "Celoscan",
    "codegen",
    "commitlint",
    "ethersproject",
    "exof",
    "fullwidth",
    "healthcheck",
    "jazzicon",
    "jsbi",
    "mento",
    "shadcn",
    "sonner",
    "toformat",
    "turbopack",
    "Turborepo",
    "valora",
    "viem",
    "Vulns"
  ]
}
