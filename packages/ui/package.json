{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:js": "tsup",
    "build": "pnpm build:js && pnpm build:css",
    "dev:js": "tsup --watch",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "dev": "concurrently \"pnpm:dev:js\" \"pnpm:dev:css\" --names \"js,css\" --prefix-colors \"bgBlue,bgGreen\"",
    "analyze": "node scripts/analyze-build.js",
    "build:analyze": "pnpm run build && pnpm run analyze"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.488.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.4",
    "@tailwindcss/postcss": "^4.1.4",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
