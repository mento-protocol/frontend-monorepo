{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./globals.css": "./dist/globals.css"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "analyze": "node scripts/analyze-build.js",
    "build": "pnpm clean && concurrently \"pnpm:build:js\" \"pnpm:build:css\" --names \"js,css\" --prefix-colors \"bgBlue,bgGreen\"",
    "build:analyze": "pnpm run build && pnpm run analyze",
    "build:css": "tailwindcss -i ./src/globals.css -o ./dist/globals.css --minify",
    "build:js": "tsup",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf .turbo",
    "dev": "concurrently \"pnpm:dev:js\" \"pnpm:dev:css\" --names \"js,css\" --prefix-colors \"bgBlue,bgGreen\"",
    "dev:css": "tailwindcss -i ./src/globals.css -o ./dist/globals.css --watch",
    "dev:js": "tsup --watch",
    "generate:component": "turbo gen react-component",
    "lint": "eslint . --max-warnings 100",
    "watch": "pnpm dev"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "catalog:",
    "@radix-ui/react-checkbox": "catalog:",
    "@radix-ui/react-collapsible": "catalog:",
    "@radix-ui/react-dialog": "catalog:",
    "@radix-ui/react-dropdown-menu": "catalog:",
    "@radix-ui/react-label": "catalog:",
    "@radix-ui/react-navigation-menu": "catalog:",
    "@radix-ui/react-popover": "catalog:",
    "@radix-ui/react-radio-group": "catalog:",
    "@radix-ui/react-scroll-area": "catalog:",
    "@radix-ui/react-select": "catalog:",
    "@radix-ui/react-separator": "catalog:",
    "@radix-ui/react-slider": "catalog:",
    "@radix-ui/react-slot": "catalog:",
    "@radix-ui/react-tabs": "catalog:",
    "@radix-ui/react-tooltip": "catalog:",
    "@tiptap/core": "catalog:",
    "@tiptap/extension-link": "catalog:",
    "@tiptap/extension-placeholder": "catalog:",
    "@tiptap/extension-text-align": "catalog:",
    "@tiptap/extension-text-style": "catalog:",
    "@tiptap/extension-typography": "catalog:",
    "@tiptap/extension-underline": "catalog:",
    "@tiptap/pm": "catalog:",
    "@tiptap/react": "catalog:",
    "@tiptap/starter-kit": "catalog:",
    "animejs": "catalog:",
    "class-variance-authority": "catalog:",
    "clsx": "catalog:",
    "cmdk": "catalog:",
    "lucide-react": "catalog:",
    "next-themes": "catalog:",
    "react": "catalog:",
    "react-day-picker": "catalog:",
    "react-dom": "catalog:",
    "react-hook-form": "catalog:",
    "recharts": "catalog:",
    "sonner": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwindcss": "catalog:",
    "tw-animate-css": "catalog:",
    "vaul": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "catalog:",
    "@tailwindcss/postcss": "catalog:",
    "@turbo/gen": "catalog:",
    "@types/react": "catalog:",
    "concurrently": "catalog:",
    "esbuild": "catalog:",
    "esbuild-plugin-preserve-directives": "catalog:",
    "eslint": "catalog:",
    "postcss": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
