{
  "name": "@repo/web3",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./wagmi": {
      "types": "./dist/wagmi.d.ts",
      "import": "./dist/wagmi.js",
      "require": "./dist/wagmi.cjs"
    },
    "./wagmi-ssr": {
      "types": "./dist/wagmi-ssr.d.ts",
      "import": "./dist/wagmi-ssr.js",
      "require": "./dist/wagmi-ssr.cjs"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "node scripts/analyze-build.js",
    "build": "pnpm clean && pnpm build:js",
    "build:analyze": "pnpm run build && pnpm run analyze",
    "build:js": "tsup",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf .turbo",
    "dev": "pnpm dev:js",
    "dev:js": "tsup --watch",
    "generate:component": "turbo gen react-component",
    "lint": "eslint . --max-warnings 100",
    "watch": "pnpm dev:js"
  },
  "dependencies": {
    "@ethersproject/address": "^5.8.0",
    "@ethersproject/units": "^5.8.0",
    "@mento-protocol/mento-sdk": "3.0.0-beta.7",
    "@metamask/jazzicon": "catalog:",
    "@repo/typescript-config": "workspace:*",
    "@repo/ui": "workspace:*",
    "bignumber.js": "^9.3.1",
    "ethers": "catalog:",
    "jotai": "catalog:",
    "lucide-react": "catalog:",
    "react": "catalog:",
    "react-hook-form": "catalog:",
    "tsup": "catalog:",
    "viem": "catalog:",
    "wagmi": "catalog:"
  },
  "peerDependencies": {
    "@rainbow-me/rainbowkit": "catalog:",
    "@sentry/nextjs": "catalog:",
    "@tanstack/react-query": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "esbuild-plugin-preserve-directives": "catalog:",
    "eslint": "catalog:",
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tsup": "catalog:",
    "viem": "catalog:",
    "wagmi": "catalog:"
  }
