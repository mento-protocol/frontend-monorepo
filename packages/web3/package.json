{
  "name": "@repo/web3",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./wagmi": {
      "types": "./dist/wagmi.d.ts",
      "import": "./dist/wagmi.js",
      "require": "./dist/wagmi.cjs"
    },
    "./wagmi-ssr": {
      "types": "./dist/wagmi-ssr.d.ts",
      "import": "./dist/wagmi-ssr.js",
      "require": "./dist/wagmi-ssr.cjs"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "node scripts/analyze-build.js",
    "build": "pnpm clean && pnpm build:js",
    "build:analyze": "pnpm run build && pnpm run analyze",
    "build:js": "tsup",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "pnpm dev:js",
    "dev:js": "tsup --watch",
    "generate:component": "turbo gen react-component",
    "lint": "eslint . --max-warnings 100",
    "watch": "pnpm dev:js"
  },
  "dependencies": {
    "@ethersproject/address": "^5.8.0",
    "@ethersproject/units": "^5.8.0",
    "@mento-protocol/mento-sdk": "^1.16.1-beta.0",
    "@metamask/jazzicon": "https://github.com/jmrossy/jazzicon#7a8df28",
    "@repo/typescript-config": "workspace:*",
    "@repo/ui": "workspace:*",
    "bignumber.js": "^9.3.0",
    "ethers": "^5.8.0",
    "jotai": "^2.12.5",
    "lucide-react": "^0.488.0",
    "react-hook-form": "^7.58.1"
  },
  "devDependencies": {
    "react": "^19.1.0",
    "tsup": "^8.5.0",
    "viem": "^2.37.11",
    "wagmi": "^2.16.9"
  },
  "peerDependencies": {
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.83.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "esbuild-plugin-preserve-directives": "^0.0.11",
    "eslint": "^9.24.0",
    "next": "^15",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.4.0",
    "viem": "^2.37.11",
    "wagmi": "^2.16.9"
  }
}
