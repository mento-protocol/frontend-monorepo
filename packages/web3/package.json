{
  "name": "@repo/web3",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./wagmi": {
      "types": "./dist/wagmi.d.ts",
      "import": "./dist/wagmi.js",
      "require": "./dist/wagmi.cjs"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "node scripts/analyze-build.js",
    "build": "pnpm clean && pnpm build:js",
    "build:analyze": "pnpm run build && pnpm run analyze",
    "build:js": "tsup",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "codegen": "graphql-codegen",
    "dev": "pnpm dev:js",
    "dev:js": "tsup --watch",
    "generate:component": "turbo gen react-component",
    "lint": "eslint . --max-warnings 100"
  },
  "dependencies": {
    "@apollo/client": "^3.13.9",
    "@apollo/experimental-nextjs-app-support": "^0.12.3",
    "@ethersproject/address": "^5.8.0",
    "@ethersproject/units": "^5.8.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript-apollo-client-helpers": "^3.0.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "@mento-protocol/mento-sdk": "^1.10.3",
    "@metamask/jazzicon": "https://github.com/jmrossy/jazzicon#7a8df28",
    "@repo/typescript-config": "workspace:*",
    "@repo/ui": "workspace:*",
    "bignumber.js": "^9.3.0",
    "date-fns": "^4.1.0",
    "decimal.js-light": "^2.5.1",
    "ethers": "^5.8.0",
    "jotai": "^2.12.5",
    "jsbi": "^4.3.2",
    "lucide-react": "^0.488.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
    "toformat": "^2.0.0",
    "viem": "^2.33.1"
  },
  "peerDependencies": {
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.83.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "esbuild-plugin-preserve-directives": "^0.0.11",
    "eslint": "^9.24.0",
    "next": "^15",
    "tsup": "^8.4.0",
    "wagmi": "^2.16.0"
  }
}
