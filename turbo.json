{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "ETHERSCAN_API_KEY",
    "NODE_ENV",
    "NEXT_PUBLIC_STORAGE_URL",
    "NEXT_PUBLIC_USE_FORK",
    "NEXT_PUBLIC_ENABLE_DEBUG",
    "NEXT_RUNTIME",
    "CI",
    "SENTRY_AUTH_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true
    },
    "lint": {},
    "check-types": {
      "outputs": [".tsbuildinfo", "tsconfig.tsbuildinfo"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "remoteCache": {
    "signature": false
  }
}
